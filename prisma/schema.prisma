generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PostType {
  TEXT
  IMAGE
  VIDEO
}

enum SocialMedia {
  INSTAGRAM
  YOUTUBE
  TUMBLR
  PINTEREST
  THREADS
  TIKTOK
}

model SocialMediaPost {
  id              String      @id @default(cuid())
  socialMedia     SocialMedia
  socialMediaPostId String?   // The ID of the post on the social media platform
  failedReason    String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  post            Post        @relation(fields: [postId], references: [id])
  postId          String
}

model Post {
  id              String            @id @default(cuid())
  description     String
  postType        PostType
  images          String[]          @default([])
  video           String?
  scheduledAt     DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  
  socialMediaPosts SocialMediaPost[]
  createdBy       User              @relation(fields: [createdById], references: [id])
  createdById     String
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  tumblrOAuthConsumerKey String?
  tumblrOAuthConsumerSecret String?
  setup         Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  posts         Post[]
}
